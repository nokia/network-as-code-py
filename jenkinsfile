pipeline {
    agent { 
        node {
            label 'docker-agent-python'
            }
      }
    triggers {
        pollSCM '* * * * *'
    }
    stages {
        stage('Build') {
            steps {
                echo "Building.."
                sh '''
                export https_proxy=http://fihel1d-proxy.emea.nsn-net.net:8080
                export http_proxy=http://fihel1d-proxy.emea.nsn-net.net:8080
                pip install poetry
                '''
            }
        }
        stage('Test') {
            steps {
                echo "Testing.."
                sh '''
                poetry install
                poetry run pytest
                '''
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deliver....'
                sh '''
                echo "doing delivery stuff.."
                '''
            }
        }
    }
}