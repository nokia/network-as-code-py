pipeline {
    agent any
    triggers {
        pollSCM '* * * * *'
    }
    environment {
        PYPI_REPOSITORY = 'test_pypi_repository'
        PYPI_USERNAME = "${PYPI_USERNAME}"
        PYPI_PASSWORD = "${PYPI_PASSWORD}"
    }
    stages {
        stage('Build') {
            steps {
                echo "Building.."
                script {
                    sh '''
                        curl -sSL https://install.python-poetry.org | python3
                        $HOME/.local/bin/poetry install
                        $HOME/.local/bin/poetry build
                    '''
                }
            }
        }
        stage('Test') {
            steps {
                echo "Testing.."
                script {
                    sh '''
                        $HOME/.local/bin/poetry install
                        $HOME/.local/bin/poetry run pytest
                    '''
                }
                
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sh '''
                $HOME/.local/bin/poetry config repositories.devpi ${PYPI_REPOSITORY}
                $HOME/.local/bin/poetry publish --build -r devpi -u ${PYPI_USERNAME} -p ${PYPI_PASSWORD}
                '''
            }
        }
    }
}
